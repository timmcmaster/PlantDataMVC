@model PlantDataMVC.Web.Models.ViewModels.PlantStock.PlantStockDeleteViewModel
@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.PlantStock asp-action="Destroy">
        <fieldset>
            <legend>Plant Stock</legend>
            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="SpeciesBinomial" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.SpeciesBinomial)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ProductTypeName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.ProductTypeName)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="QuantityInStock" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.QuantityInStock)</p>
                </div>
            </div>
         </fieldset>
        <p>
            <input type="submit" value="Delete" />
        </p>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.PlantStock asp-action="Index">Back to Index</a>
    </div>
</div>