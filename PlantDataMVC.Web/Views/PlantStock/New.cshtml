
@model PlantDataMVC.Web.Models.ViewModels.PlantStock.PlantStockNewViewModel

@{
    ViewBag.Title = "New";
}

<h2>New</h2>

<form asp-controller=@PlantDataMvcAppControllers.PlantStock asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <fieldset>
        <legend>Plant Stock</legend>

        @*@Html.HiddenFor(model => model.SpeciesId)*@


        <div class="editor-label">
            <label asp-for="SpeciesId"></label>
        </div>
        <div class="editor-field">
            @Html.QueryDropDownFor(
                () => nameof(Model.SpeciesId),
                model => model.SpeciesId,
                new ListQuery<SpeciesDataModel>(),
                p => p.Id,
                p => SpeciesFunctions.GetBinomial(p.GenusName, p.SpecificName))
            <span asp-validation-for="SpeciesId"></span>
        </div>

        @*
        <div class="editor-label">
            <label asp-for="SpeciesBinomial"></label>
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.SpeciesBinomial)
            <span asp-validation-for="SpeciesBinomial"></span>
        </div>
*@
        <div class="editor-label">
            <label asp-for="ProductTypeId"></label>
        </div>
        <div class="editor-field">
            @Html.QueryDropDownFor(
                () => nameof(Model.ProductTypeId),
                model => model.ProductTypeId,
                new ListQuery<ProductTypeDataModel>(),
                p => p.Id,
                p => p.Name)
            <span asp-validation-for="ProductTypeId"></span>
        </div>

        <div class="editor-label">
            <label asp-for="QuantityInStock"></label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuantityInStock)
            <span asp-validation-for="QuantityInStock"></span>
        </div>

        <p>
            <input type="submit" value="Create"/>
        </p>
    </fieldset>
</form>

<div>
    <a asp-controller=@PlantDataMvcAppControllers.PlantStock asp-action="Index">Back to Index</a>
</div>
