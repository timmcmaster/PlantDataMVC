@model PlantDataMVC.Web.Models.ViewModels.SeedTray.SeedTrayNewViewModel
@{
    ViewBag.Title = "New";
}
<h2>New</h2>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <fieldset>
            <legend>Seed Tray</legend>

            <div class="row mb-3">
                <label asp-for="SeedBatchId"></label>
                <div class="editor-field">
                    @*TODO: Want better representation for display value*@
                    @Html.QueryDropDownFor(
                    () => nameof(Model.SeedBatchId),
                    model => model.SeedBatchId,
                    new ListQuery<SeedBatchDataModel>(),
                    p => p.Id,
                    p => string.Concat(SpeciesFunctions.GetBinomial(p.GenusName, p.SpeciesName), ",", p.Location, ",", p.DateCollected.ToShortDateString()))
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="DateSown" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="DateSown" class="form-control" />
                    <span asp-validation-for="DateSown"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Treatment" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Treatment" class="form-control" />
                    <span asp-validation-for="Treatment"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ThrownOut" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ThrownOut" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="ThrownOut"></span>
                </div>
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Index">Back to Index</a>
    </div>
</div>
