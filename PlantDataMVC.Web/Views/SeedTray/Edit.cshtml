@model PlantDataMVC.Web.Models.ViewModels.SeedTray.SeedTrayEditViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Update">
        <div asp-validation-summary="ModelOnly"></div>
        <fieldset>
            <legend>Seed Tray</legend>

            <input asp-for="Id" type="hidden" />

            <div>
                <fieldset>
                    <legend>Seed Batch Info</legend>

                    <input asp-for="SeedBatchId" type="hidden" />

                    <div class="row mb-3">
                        <label asp-for="SeedBatchSpeciesBinomial" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="col-form-label">@Html.DisplayFor(model => model.SeedBatchSpeciesBinomial)</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="SeedBatchLocation" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="col-form-label">@Html.DisplayFor(model => model.SeedBatchLocation)</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="SeedBatchDateCollected" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <p class="col-form-label">@Html.DisplayFor(model => model.SeedBatchDateCollected)</p>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="row mb-3">
                <label asp-for="DateSown" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="DateSown" class="form-control" />
                    <span asp-validation-for="DateSown"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Treatment" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Treatment" class="form-control" />
                    <span asp-validation-for="Treatment"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ThrownOut" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ThrownOut" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="ThrownOut"></span>
                </div>
            </div>

            <p>
                <input type="submit" value="Update" />
            </p>
        </fieldset>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Index">Back to Index</a>
    </div>
</div>
