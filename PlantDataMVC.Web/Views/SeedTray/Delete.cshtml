@model PlantDataMVC.Web.Models.ViewModels.SeedTray.SeedTrayDeleteViewModel
@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Destroy">
        <fieldset>
            <legend>Seed Tray</legend>

            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="SeedBatchId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.SeedBatchId)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="SpeciesBinomial" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.SpeciesBinomial)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="DateSown" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.DateSown)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Treatment" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.Treatment)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ThrownOut" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ThrownOut" type="checkbox" class="form-check-input" disabled />
                </div>
            </div>
        </fieldset>
        <p>
            <input type="submit" value="Delete" />
        </p>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Index">Back to Index</a>
    </div>
</div>