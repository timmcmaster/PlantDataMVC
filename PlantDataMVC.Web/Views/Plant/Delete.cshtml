@model PlantDataMVC.Web.Models.ViewModels.Plant.PlantDeleteViewModel
@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.Plant asp-action="Destroy">
        <fieldset>
            <legend>Plant</legend>

            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="LatinName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.LatinName)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CommonName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.CommonName)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="PropagationTime" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.PropagationTime)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Native" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Native" type="checkbox" class="form-check-input" disabled />
                </div>
            </div>
        </fieldset>
        <p>
            <input type="submit" value="Delete" />
        </p>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.Plant asp-action="Index">Back to Index</a>
    </div>
</div>