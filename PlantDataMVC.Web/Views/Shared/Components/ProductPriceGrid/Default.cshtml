@model ListViewModelStatic<PlantDataMVC.Web.Models.ViewModels.ProductPrice.ProductPriceListViewModel>

@using ProductPrice = PlantDataMVC.Web.Models.ViewModels.ProductPrice
@using PlantDataMVC.Web.Constants;
@{
    ProductPrice.ProductPriceListViewModel sampleElement = new ProductPrice.ProductPriceListViewModel();
}

<ejs-grid id="SeedBatchGrid"
          allowPaging="true"
          allowSorting="true"
          height="550" width="1000"        
          toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Update", "Cancel" })">
    <e-data-manager adaptor="UrlAdaptor"
                    url="@Url.Action("UrlDatasource", @PlantDataMvcAppControllers.ProductPriceGrid)" 
                    insertUrl="@Url.Action("Insert", @PlantDataMvcAppControllers.ProductPriceGrid)"
                    updateUrl="@Url.Action("Update", @PlantDataMvcAppControllers.ProductPriceGrid)"
                    removeUrl="@Url.Action("Delete", @PlantDataMvcAppControllers.ProductPriceGrid)">
    </e-data-manager>
    <e-grid-pagesettings pageSize="@Model.PageSize" currentPage="@Model.PageNumber"></e-grid-pagesettings>
    <e-grid-editsettings allowAdding="true" allowEditing="true" allowDeleting="true"></e-grid-editsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(sampleElement.PriceListTypeName)" headerText="@Html.DisplayNameFor(x => sampleElement.PriceListTypeName)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.ProductTypeName)" headerText="@Html.DisplayNameFor(x => sampleElement.ProductTypeName)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.DateEffective)" headerText="@Html.DisplayNameFor(x => sampleElement.DateEffective)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.Price)" headerText="@Html.DisplayNameFor(x => sampleElement.Price)"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<style>
    .e-grid .e-row .e-rowcell {
        padding-top: 2px;
        padding-bottom: 2px;
    }
</style>