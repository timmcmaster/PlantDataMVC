@model IEnumerable<PlantDataMVC.Web.Models.ViewModels.Plant.PlantListViewModel>

@using Plant = PlantDataMVC.Web.Models.ViewModels.Plant
@{
    Plant.PlantListViewModel sampleElement = new Plant.PlantListViewModel();
}
<ejs-grid id="PlantGrid" dataSource="@Model" allowSorting="true" actionBegin="beginSort" actionComplete="completeSort">
    <e-grid-editsettings allowEditing="true" allowDeleting="true"></e-grid-editsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(sampleElement.Binomial)" headerText="@Html.DisplayNameFor(x => sampleElement.Binomial)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.CommonName)" headerText="@Html.DisplayNameFor(x => sampleElement.CommonName)"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<script>
    function beginSort(args) {
        // Get sort column name
        alert(args.requestType + ' ' + args.type); //custom Action

        // And sort type

    }
    function completeSort(args) {
        alert(args.requestType + ' ' + args.type); //custom Action
    }
</script>

