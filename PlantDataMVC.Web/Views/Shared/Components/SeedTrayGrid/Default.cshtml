@model ListViewModelStatic<PlantDataMVC.Web.Models.ViewModels.SeedTray.SeedTrayListViewModel>

@using SeedTray = PlantDataMVC.Web.Models.ViewModels.SeedTray
@using PlantDataMVC.Web.Constants;
@{
    SeedTray.SeedTrayListViewModel sampleElement = new SeedTray.SeedTrayListViewModel();
}

<ejs-grid id="SeedBatchGrid"
          allowPaging="true"
          allowSorting="true"
          height="550" width="1000"        
          toolbar="@(new List<string>() { "Add", "Edit", "Delete","Update","Cancel" })">
    <e-data-manager adaptor="UrlAdaptor"
                    url="@Url.Action("UrlDatasource", @PlantDataMvcAppControllers.SeedTrayGrid)" 
                    insertUrl="@Url.Action("Insert", @PlantDataMvcAppControllers.SeedTrayGrid)"
                    updateUrl="@Url.Action("Update", @PlantDataMvcAppControllers.SeedTrayGrid)"
                    removeUrl="@Url.Action("Delete", @PlantDataMvcAppControllers.SeedTrayGrid)">
    </e-data-manager>
    <e-grid-pagesettings pageSize="@Model.PageSize" currentPage="@Model.PageNumber"></e-grid-pagesettings>
    <e-grid-editsettings allowAdding="true" allowEditing="true" allowDeleting="true"></e-grid-editsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(sampleElement.Id)" headerText="@Html.DisplayNameFor(x => sampleElement.Id)" visible="false" isPrimaryKey="true"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.SeedBatchId)" headerText="@Html.DisplayNameFor(x => sampleElement.SeedBatchId)" visible="false" isPrimaryKey="true"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.SpeciesBinomial)" headerText="@Html.DisplayNameFor(x => sampleElement.SpeciesBinomial)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.DateSown)" headerText="@Html.DisplayNameFor(x => sampleElement.DateSown)"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<style>
    .e-grid .e-row .e-rowcell {
        padding-top: 2px;
        padding-bottom: 2px;
    }
</style>