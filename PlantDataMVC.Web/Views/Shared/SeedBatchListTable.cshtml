@model IList<PlantDataMVC.Web.Models.ViewModels.SeedBatch.SeedBatchListViewModel>
@using SeedBatch = PlantDataMVC.Web.Models.ViewModels.SeedBatch

@{
    SeedBatch.SeedBatchListViewModel sampleElement = new SeedBatch.SeedBatchListViewModel();   
}
<table class="grid">
    <tr>
        <th>@Html.ColumnHeaderFor(m => sampleElement.SpeciesBinomial)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.DateCollected)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.SiteName)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.Location)</th>
        <th></th>
        <th></th>
    </tr>

@{
int count = 0;
foreach (var entry in Model) {
    <tr>
        <td><a asp-controller="SeedBatch" asp-action="Show" asp-route-id="@entry.Id">@entry.SpeciesBinomial</a></td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).DateCollected)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).SiteName)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).Location)</td>
        <td><a asp-controller="SeedBatch" asp-action="Edit" asp-route-id="@entry.Id">Edit</a></td>
        <td><a asp-controller="SeedBatch" asp-action="Delete" asp-route-id="@entry.Id">Delete</a></td>
    </tr>
    count++;
}
}
</table>