@model PlantDataMVC.Web.Models.ViewModels.SaleEvent.SaleEventEditViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.SaleEvent asp-action="Update">
        <div asp-validation-summary="ModelOnly"></div>
        <fieldset>
            <legend>Sale</legend>
            
            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="SaleDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="SaleDate" class="form-control" />
                    <span asp-validation-for="SaleDate"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Location" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location"></span>
                </div>
            </div>

            <p>
                <input type="submit" value="Update" />
            </p>
        </fieldset>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.SaleEvent asp-action="Index">Back to Index</a>
    </div>
</div>
