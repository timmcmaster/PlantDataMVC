@model PlantDataMVC.Web.Models.ViewModels.Transaction.TransactionEditViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.Transaction asp-action="Update">
        <div asp-validation-summary="ModelOnly"></div>
        <fieldset>
            <legend>Transaction</legend>

            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="SpeciesId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.QueryDropDownFor(
                    () => nameof(Model.SpeciesId),
                    model => model.SpeciesId,
                    new ListQuery<SpeciesDataModel>(),
                    p => p.Id,
                    p => SpeciesFunctions.GetBinomial(p.GenusName, p.SpecificName),
                    new { @class="form-select" })
                    <span asp-validation-for="SpeciesId"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ProductTypeId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.QueryDropDownFor(
                    () => nameof(Model.ProductTypeId),
                    model => model.ProductTypeId,
                    new ListQuery<ProductTypeDataModel>(),
                    p => p.Id,
                    p => p.Name)
                    <span asp-validation-for="ProductTypeId"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TransactionTypeId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.QueryDropDownFor(
                    () => nameof(Model.TransactionTypeId),
                    model => model.TransactionTypeId,
                    new ListQuery<JournalEntryTypeDataModel>(),
                    p => p.Id,
                    p => p.Name)
                    <span asp-validation-for="TransactionTypeId"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TransactionDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TransactionDate" class="form-control" />
                    <span asp-validation-for="TransactionDate"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="SeedTrayId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.QueryDropDownFor(
                    () => nameof(Model.SeedTrayId),
                    model => model.SeedTrayId,
                    new ListQuery<SeedTrayDataModel>(),
                    p => p.Id,
                    p => $"{p.Id}, {p.DateSown}")
                    <span asp-validation-for="SeedTrayId"></span>
                </div>
            </div>

            <div class="editor-label">
                <label asp-for="TransactionSource"></label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TransactionSource)
                <span asp-validation-for="TransactionSource"></span>
            </div>

            <div class="editor-label">
                <label asp-for="Notes"></label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Notes)
                <span asp-validation-for="Notes"></span>
            </div>

            <p>
                <input type="submit" value="Update" />
            </p>
        </fieldset>
    </form>
</div>

