@model PlantDataMVC.Web.Models.ViewModels.Transaction.TransactionDeleteViewModel
@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.Transaction asp-action="Destroy">
        <fieldset>
            <legend>Transaction</legend>

            <input asp-for="Id" type="hidden" />
            
            <div class="row mb-3">
                <label asp-for="TransactionTypeName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.TransactionTypeName)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TransactionDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.TransactionDate)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.Quantity)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="EffectiveQuantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.EffectiveQuantity)</p>
                </div>
            </div>
        </fieldset>
        <p>
            <input type="submit" value="Delete" /> |
        </p>
    </form>
</div>