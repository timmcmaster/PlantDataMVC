@model PlantDataMVC.Web.Models.ViewModels.ProductPrice.ProductPriceNewViewModel
@{
    ViewBag.Title = "New";
}
<h2>New</h2>
<div class="container-lg">
    <form asp-controller=@PlantDataMvcAppControllers.ProductPrice asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <fieldset>
            <legend>Product Price</legend>

            <input asp-for="PriceListTypeId" type="hidden" />

            <div class="row mb-3">
                <label asp-for="PriceListTypeName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <p class="col-form-label">@Html.DisplayFor(model => model.PriceListTypeName)</p>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ProductTypeId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    @Html.QueryDropDownFor(
                    () => nameof(Model.ProductTypeId),
                    model => model.ProductTypeId,
                    new ListQuery<ProductTypeDataModel>(),
                    p => p.Id,
                    p => p.Name,
                    new { @class="form-select" })
                    <span asp-validation-for="ProductTypeId"></span>
                </div>

                <div class="row mb-3">
                    <label asp-for="DateEffective" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="DateEffective" class="form-control" />
                        <span asp-validation-for="DateEffective"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price"></span>
                    </div>
                </div>

                <p>
                    <input type="submit" value="Create" />
                </p>
        </fieldset>
    </form>
    <div>
        <a asp-controller=@PlantDataMvcAppControllers.PriceListType asp-action="Details" asp-route-id="@Model.PriceListTypeId">Back to Details</a>
    </div>
</div>