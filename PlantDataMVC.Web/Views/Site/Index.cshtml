@model ListViewModelStatic<PlantDataMVC.Web.Models.ViewModels.Site.SiteListViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (PlantDataMvcConstants.UseBasicMvcViews)
{
    <a asp-action="New">Add New Item</a>
}

@await Component.InvokeAsync("SiteGrid", new { model = Model })

@if (PlantDataMvcConstants.UseBasicMvcViews)
{
    @Html.PagingLinksFor(m => Model)
}
