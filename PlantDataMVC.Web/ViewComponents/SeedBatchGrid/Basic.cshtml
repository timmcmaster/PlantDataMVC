@using SeedBatch = PlantDataMVC.Web.Models.ViewModels.SeedBatch

@model SeedBatchGridViewModel
@{
    SeedBatch.SeedBatchListViewModel sampleElement = new SeedBatch.SeedBatchListViewModel();
}
<div class="container-lg">
    @if (Model.Options.AllowAdd)
    {
        <a asp-controller="@PlantDataMvcAppControllers.SeedBatch" asp-action="New">Add New Item</a>
    }
    <table class="table border">
        <thead>
            <tr>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.SpeciesBinomial, Model.Options.AllowSorting)</th>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.DateCollected, Model.Options.AllowSorting)</th>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.SiteName, Model.Options.AllowSorting)</th>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.Location, Model.Options.AllowSorting)</th>
                @if (Model.Options.AllowEdit)
                {
                    <th scope="col"></th>
                }
                @if (Model.Options.AllowDelete)
                {
                    <th scope="col"></th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                foreach (var entry in Model.Items)
                {
                    <tr>
                        <td><a asp-controller=@PlantDataMvcAppControllers.SeedBatch asp-action="Show" asp-route-id="@entry.Id">@entry.SpeciesBinomial</a></td>
                        <td>@Html.DisplayFor(m => m.Items.ElementAt(count).DateCollected)</td>
                        <td>@Html.DisplayFor(m => m.Items.ElementAt(count).SiteName)</td>
                        <td>@Html.DisplayFor(m => m.Items.ElementAt(count).Location)</td>
                        @if (Model.Options.AllowEdit)
                        {
                            <td><a asp-controller=@PlantDataMvcAppControllers.SeedBatch asp-action="Edit" asp-route-id="@entry.Id">Edit</a></td>
                        }
                        @if (Model.Options.AllowDelete)
                        {
                            <td><a asp-controller=@PlantDataMvcAppControllers.SeedBatch asp-action="Delete" asp-route-id="@entry.Id">Delete</a></td>
                        }
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
    @if (Model.Options.AllowPaging)
    {
        @Html.PagingLinksFor(m => Model)
    }
</div>