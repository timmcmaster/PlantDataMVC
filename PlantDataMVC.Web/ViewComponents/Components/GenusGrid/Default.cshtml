@using Genus = PlantDataMVC.Web.Models.ViewModels.Genus

@model ListViewModelStatic<Genus.GenusListViewModel>

@{
    Genus.GenusListViewModel sampleElement = new Genus.GenusListViewModel();
}

<ejs-grid id="GenusGrid"
          allowPaging="true"
          allowSorting="true"
          height="550" width="800"        
          toolbar="@(new List<string>() { "Add", "Edit", "Delete","Update","Cancel" })">
    <e-data-manager adaptor="UrlAdaptor"
                    url="@Url.Action("UrlDatasource", @PlantDataMvcAppControllers.GenusGrid)" 
                    insertUrl="@Url.Action("Insert", @PlantDataMvcAppControllers.GenusGrid)"
                    updateUrl="@Url.Action("Update", @PlantDataMvcAppControllers.GenusGrid)"
                    removeUrl="@Url.Action("Delete", @PlantDataMvcAppControllers.GenusGrid)">
    </e-data-manager>
    <e-grid-pagesettings pageSize="@Model.PageSize" currentPage="@Model.PageNumber"></e-grid-pagesettings>
    <e-grid-editsettings allowAdding="true" allowEditing="true" allowDeleting="true"></e-grid-editsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(sampleElement.Id)" headerText="@Html.DisplayNameFor(x => sampleElement.Id)" visible="false" isPrimaryKey="true"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.LatinName)" headerText="@Html.DisplayNameFor(x => sampleElement.LatinName)"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<style>
    .e-grid .e-row .e-rowcell {
        padding-top: 2px;
        padding-bottom: 2px;
    }
</style>