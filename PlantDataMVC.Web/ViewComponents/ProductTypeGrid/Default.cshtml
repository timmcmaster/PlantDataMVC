@using ProductType = PlantDataMVC.Web.Models.ViewModels.ProductType

@model ListViewModelStatic<ProductType.ProductTypeListViewModel>

@{
    ProductType.ProductTypeListViewModel sampleElement = new ProductType.ProductTypeListViewModel();
}

<ejs-grid id="SeedBatchGrid"
          allowPaging="true"
          allowSorting="true"
          height="550" width="1000"        
          toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Update", "Cancel" })">
    <e-data-manager adaptor="UrlAdaptor"
                    url="@Url.Action("UrlDatasource", @PlantDataMvcAppControllers.ProductTypeGrid)" 
                    insertUrl="@Url.Action("Insert", @PlantDataMvcAppControllers.ProductTypeGrid)"
                    updateUrl="@Url.Action("Update", @PlantDataMvcAppControllers.ProductTypeGrid)"
                    removeUrl="@Url.Action("Delete", @PlantDataMvcAppControllers.ProductTypeGrid)">
    </e-data-manager>
    <e-grid-pagesettings pageSize="@Model.PageSize" currentPage="@Model.PageNumber"></e-grid-pagesettings>
    <e-grid-editsettings allowAdding="true" allowEditing="true" allowDeleting="true"></e-grid-editsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(sampleElement.Id)" headerText="@Html.DisplayNameFor(x => sampleElement.Id)" visible="false" isPrimaryKey="true"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.Name)" headerText="@Html.DisplayNameFor(x => sampleElement.Name)"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<style>
    .e-grid .e-row .e-rowcell {
        padding-top: 2px;
        padding-bottom: 2px;
    }
</style>