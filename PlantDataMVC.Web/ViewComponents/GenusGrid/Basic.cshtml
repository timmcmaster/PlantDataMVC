@using Genus = PlantDataMVC.Web.Models.ViewModels.Genus

@model GenusGridViewModel
@{
    Genus.GenusListViewModel sampleElement = new Genus.GenusListViewModel();
}
<div class="container-lg">
    @if (Model.Options.AllowAdd)
    {
        <a asp-controller="@PlantDataMvcAppControllers.Genus" asp-action="New">Add New Item</a>
    }
    <table class="table border">
        <thead>
            <tr>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.LatinName, Model.Options.AllowSorting)</th>
                @if (Model.Options.AllowEdit)
                {
                    <th scope="col"></th>
                }
                @if (Model.Options.AllowDelete)
                {
                    <th scope="col"></th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                foreach (var entry in Model.Items)
                {
                    <tr>
                        <td><a asp-controller=@PlantDataMvcAppControllers.Genus asp-action="Show" asp-route-id="@entry.Id">@entry.LatinName</a></td>
                        @if (Model.Options.AllowEdit)
                        {
                            <td><a asp-controller=@PlantDataMvcAppControllers.Genus asp-action="Edit" asp-route-id="@entry.Id">Edit</a></td>
                        }
                        @if (Model.Options.AllowDelete)
                        {
                            <td><a asp-controller=@PlantDataMvcAppControllers.Genus asp-action="Delete" asp-route-id="@entry.Id">Delete</a></td>
                        }
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
    @if (Model.Options.AllowPaging)
    {
        @Html.PagingLinksFor(m => Model)
    }
</div>