@using Site = PlantDataMVC.Web.Models.ViewModels.Site

@model SiteGridViewModel

@{
    Site.SiteListViewModel sampleElement = new Site.SiteListViewModel();
}

<ejs-grid id="SiteGrid"
          allowPaging="@Model.Options.AllowPaging"
          allowSorting="@Model.Options.AllowSorting"
          height="550" width="1000"        
          toolbar="@Model.Options.ToolbarItems">
    <e-data-manager adaptor="UrlAdaptor"
                    url="@Url.Action("UrlDatasource", @PlantDataMvcAppControllers.SiteGrid, new { allowPaging = $"{Model.Options.AllowPaging}" })"
                    insertUrl="@Url.Action("Insert", @PlantDataMvcAppControllers.SiteGrid)"
                    updateUrl="@Url.Action("Update", @PlantDataMvcAppControllers.SiteGrid)"
                    removeUrl="@Url.Action("Delete", @PlantDataMvcAppControllers.SiteGrid)">
    </e-data-manager>
    <e-grid-pagesettings pageSize="@Model.PageSize" currentPage="@Model.PageNumber"></e-grid-pagesettings>
    <e-grid-editsettings allowAdding="@Model.Options.AllowAdd" allowEditing="@Model.Options.AllowEdit" allowDeleting="@Model.Options.AllowDelete"></e-grid-editsettings>
    <e-grid-columns>
        <e-grid-column field="@nameof(sampleElement.Id)" headerText="@Html.DisplayNameFor(x => sampleElement.Id)" visible="false" isPrimaryKey="true"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.SiteName)" headerText="@Html.DisplayNameFor(x => sampleElement.SiteName)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.Suburb)" headerText="@Html.DisplayNameFor(x => sampleElement.Suburb)"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.Latitude)" headerText="@Html.DisplayNameFor(x => sampleElement.Latitude)" type="number"></e-grid-column>
        <e-grid-column field="@nameof(sampleElement.Longitude)" headerText="@Html.DisplayNameFor(x => sampleElement.Longitude)" type="number"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<style>
    .e-grid .e-row .e-rowcell {
        padding-top: 2px;
        padding-bottom: 2px;
    }
</style>