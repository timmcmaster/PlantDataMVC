@using PlantStock = PlantDataMVC.Web.Models.ViewModels.PlantStock

@model PlantStockGridViewModel

@{
    PlantStock.PlantStockListViewModel sampleElement = new PlantStock.PlantStockListViewModel();
}

@if (Model.Options.AllowAdd)
{
    <a asp-controller="@PlantDataMvcAppControllers.PlantStock" asp-action="New">Add New Item</a>
}
<table class="grid">
    <tr>
        <th>@Html.ColumnHeaderFor(m => sampleElement.SpeciesBinomial, Model.Options.AllowSorting)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.ProductTypeName, Model.Options.AllowSorting)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.QuantityInStock, Model.Options.AllowSorting)</th>
        @if (Model.Options.AllowDelete)
        {
            <th></th>
        }
    </tr>

    @{
        int count = 0;
        foreach (var entry in Model.Items)
        {
            <tr>
                <td><a asp-controller=@PlantDataMvcAppControllers.PlantStock asp-action="Show" asp-route-id="@entry.Id">@entry.SpeciesBinomial</a></td>
                <td>@Html.DisplayFor(m => m.Items.ElementAt(count).ProductTypeName)</td>
                <td>@Html.DisplayFor(m => m.Items.ElementAt(count).QuantityInStock)</td>
                @if (Model.Options.AllowDelete)
                {
                    <td><a asp-controller=@PlantDataMvcAppControllers.PlantStock asp-action="Delete" asp-route-id="@entry.Id">Delete</a></td>
                }
            </tr>
            count++;
        }
    }
</table>
@if (Model.Options.AllowPaging)
{
    @Html.PagingLinksFor(m => Model)
}
