@using SeedTray = PlantDataMVC.Web.Models.ViewModels.SeedTray

@model SeedTrayGridViewModel
@{
    SeedTray.SeedTrayListViewModel sampleElement = new SeedTray.SeedTrayListViewModel();
}
<div class="container-lg">
    @if (Model.Options.AllowAdd)
    {
        <a asp-controller="@PlantDataMvcAppControllers.SeedTray" asp-action="New">Add New Item</a>
    }
    <table class="table border">
        <thead>
            <tr>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.Id, Model.Options.AllowSorting)</th>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.SeedBatchId, Model.Options.AllowSorting)</th>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.SpeciesBinomial, Model.Options.AllowSorting)</th>
                <th scope="col">@Html.ColumnHeaderFor(m => sampleElement.DateSown, Model.Options.AllowSorting)</th>
                @if (Model.Options.AllowEdit)
                {
                    <th scope="col"></th>
                }
                @if (Model.Options.AllowDelete)
                {
                    <th scope="col"></th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                foreach (var entry in Model.Items)
                {
                    <tr>
                        <td><a asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Show" asp-route-id="@entry.Id">@entry.Id.ToString()</a></td>
                        <td><a asp-controller=@PlantDataMvcAppControllers.SeedBatch asp-action="Show" asp-route-id="@entry.SeedBatchId">@entry.SeedBatchId.ToString()</a></td>
                        <td>@Html.DisplayFor(m => m.Items.ElementAt(count).SpeciesBinomial)</td>
                        <td>@Html.DisplayFor(m => m.Items.ElementAt(count).DateSown)</td>
                        @if (Model.Options.AllowEdit)
                        {
                            <td><a asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Edit" asp-route-id="@entry.Id">Edit</a></td>
                        }
                        @if (Model.Options.AllowDelete)
                        {
                            <td><a asp-controller=@PlantDataMvcAppControllers.SeedTray asp-action="Delete" asp-route-id="@entry.Id">Delete</a></td>
                        }
                    </tr>
                    count++;
                }
            }
        </tbody>
    </table>
    @if (Model.Options.AllowPaging)
    {
        @Html.PagingLinksFor(m => Model)
    }
</div>