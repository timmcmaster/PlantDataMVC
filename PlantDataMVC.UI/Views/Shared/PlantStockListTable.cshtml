@model IList<PlantStockListViewModel>

@using PlantDataMVC.UI.Models.ViewModels
@using Framework.Web.Mvc.Sorting

@{
    PlantStockListViewModel sampleElement = new PlantStockListViewModel();
}

<table class="grid">
    <tr>
        <th>@Html.ColumnHeaderFor(m => sampleElement.SpeciesBinomial)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.ProductTypeName)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.QuantityInStock)</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@{
int count = 0;
foreach (var model in Model) {
    <tr>
        <td>@Html.ActionLink(model.SpeciesBinomial, "Show", "PlantStock", new { id = model.Id }, null)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).ProductTypeName)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).QuantityInStock)</td>
        <td>@Html.ActionLink("Edit", "Edit", "PlantStock", new { id = model.Id }, null)</td>
        <td>@Html.ActionLink("Details", "Details", "PlantStock", new { id = model.Id }, null)</td>
        <td>@Html.ActionLink("Delete", "Delete", "PlantStock", new { id = model.Id }, null)</td>
    </tr>
    count++;
}
}
</table>