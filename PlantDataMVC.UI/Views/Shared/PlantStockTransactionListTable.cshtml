@model IList<PlantDataMVC.UI.Models.ViewModels.Transaction.PlantStockTransactionListViewModel>

@using Framework.Web.Mvc.Sorting
@using PlantDataMVC.UI.Models.ViewModels
@using PlantDataMVC.UI.Models.ViewModels.Transaction

@{
    PlantStockTransactionListViewModel sampleElement = new PlantStockTransactionListViewModel();   
}
<table class="grid">
    <tr>
        <th>@Html.ColumnHeaderFor(m => sampleElement.Id)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.PlantStockId)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.TransactionTypeName)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.TransactionDate)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.Quantity)</th>
        <th></th>
        <th></th>
    </tr>

@{
int count = 0;
foreach (var model in Model) {
    <tr>
        <td>@Html.DisplayFor(m => m.ElementAt(count).Id)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).PlantStockId)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).TransactionTypeName)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).TransactionDate)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).Quantity)</td>
        <td>@Html.ActionLink("Edit", "Edit", "Transaction", new { id = model.Id }, null)</td>
        <td>@Html.ActionLink("Delete", "Delete", "Transaction", new { id = model.Id }, null)</td>
    </tr>
    count++;
}
}
</table>