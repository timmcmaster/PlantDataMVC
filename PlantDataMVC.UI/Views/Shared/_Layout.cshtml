@using PlantDataMVC.UI.Helpers
@using Framework.Web.Mvc
@*@using PlantDataMVC.UI.Areas.Security.Controllers*@

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css") <!-- local css -->

    <!-- TEST: Use CDN versions for external css as well -->
    <!-- jquery UI (base theme) -->
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
    <!--bootstrap-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <!--open layers mapping-->
    <link href="https://cdn.rawgit.com/openlayers/openlayers.github.io/master/en/v5.1.3/css/ol.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="header">
        <div class="left">
            <div id="title">
                MVC Plant Data Application
            </div>
        </div>
        <div class="right">
            <div id="logindisplay">
                @if (User.Identity.IsAuthenticated)
                {<ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("(Logout)", "Logout", "Header")</li>
                    </ul>
                }
            </div>
        </div>
        @*<div class="right">
            <div id="logindisplay">
                @{ Html.RenderAction<AccountController>(c => c.RenderLogonControl()); }
            </div>
        </div>*@
        <div class="subheader">
            <em>Displaying plant info for today's world... :)</em>
        </div>


        <div id="sidebar">
            <div>
                <ul id="menu" class="mymenu">
                    @Html.ListItem("Home", "Index", "Home")
                    @Html.BeginListItem("Genera", "Index", "Genus")
                    <ul class="mysub-menu">
                        @Html.ListItem("New", "New", "Genus")
                    </ul>
                    @Html.EndListItem()
                    @Html.BeginListItem("Plants", "Index", "Plant")
                    <ul class="mysub-menu">
                        @Html.ListItem("New", "New", "Plant")
                    </ul>
                    @Html.EndListItem()
                    @Html.BeginListItem("Plant Seeds", "Index", "SeedBatch")
                    <ul class="mysub-menu">
                        @Html.ListItem("New", "New", "SeedBatch")
                    </ul>
                    @Html.EndListItem()
                    @Html.BeginListItem("Sites", "Index", "Site")
                    <ul class="mysub-menu">
                        @Html.ListItem("New", "New", "Site")
                    </ul>
                    @Html.EndListItem()
                    @Html.BeginListItem("Plant Stock", "Index", "PlantStock")
                    <ul class="mysub-menu">
                        @Html.ListItem("New", "New", "PlantStock")
                    </ul>
                    @Html.EndListItem()
                    @Html.BeginListItem("Seed Trays", "Index", "SeedTray")
                    <ul class="mysub-menu">
                        @Html.ListItem("New", "New", "SeedTray")
                    </ul>
                    @Html.EndListItem()
                    @Html.ListItem("About", "About", "Home")
                </ul>
                <hr />
            </div>
        </div>
    </div>

<div id="main">
    @RenderBody()
</div>

<div id="footer">
    A web page by Tim McMaster.
</div>

