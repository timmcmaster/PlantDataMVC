@model IList<PlantDataMVC.UI.Models.ViewModels.Tray.TrayListViewModel>

@using Framework.Web.Mvc.Sorting
@using PlantDataMVC.UI.Models.ViewModels.Tray

@{
    TrayListViewModel sampleElement = new TrayListViewModel();   
}
<table class="grid">
    <tr>
        <th>@Html.ColumnHeaderFor(m => sampleElement.SeedBatchId)</th>
        <th>@Html.ColumnHeaderFor(m => sampleElement.DatePlanted)</th>
        <th></th>
        <th></th>
    </tr>

@{
int count = 0;
foreach (var model in Model) {
    <tr>
        <td>@Html.ActionLink(model.SeedBatchId.ToString(), "Show", "Tray", new { id = model.Id }, null)</td>
        <td>@Html.DisplayFor(m => m.ElementAt(count).DatePlanted)</td>
        <td>@Html.ActionLink("Edit", "Edit", "Tray", new { id = model.Id }, null)</td>
        <td>@Html.ActionLink("Delete", "Delete", "Tray", new { id = model.Id }, null)</td>
    </tr>
    count++;
}
}
</table>