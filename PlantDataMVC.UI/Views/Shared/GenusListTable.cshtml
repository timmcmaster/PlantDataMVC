@model IList<PlantDataMVC.UI.Models.ViewModels.Genus.GenusListViewModel>

@using PlantDataMVC.UI.Models.ViewModels
@using Framework.Web.Mvc.Sorting
@using PlantDataMVC.UI.Models.ViewModels.Genus

@{
    GenusListViewModel sampleElement = new GenusListViewModel();
}
<table class="grid">
    <tr>
        <th>@Html.ColumnHeaderFor(m => sampleElement.LatinName)</th>
        <th></th>
        <th></th>
    </tr>


@{
int count = 0;
foreach (var model in Model) {
    <tr>
        <td>@Html.ActionLink(model.LatinName, "Show", "Genus", new { id = model.Id }, null)</td>
        <td>@Html.ActionLink("Edit", "Edit", "Genus", new { id = model.Id }, null)</td>
        <td>@Html.ActionLink("Delete", "Delete", "Genus", new { id = model.Id }, null)</td>
    </tr>
    count++;
}
}
</table>
